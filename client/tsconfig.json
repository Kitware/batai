{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@use/*": ["src/use/*"],
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"]
    },
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom",
    ],
    "types": [
      "vite/client"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
